<%= form_for @participant do |participant_form|%>

  <fieldset>
    <legend>Profile</legend>

    <dl>
      <dt><%= participant_form.label :name %></dt>
      <dd><%= participant_form.text_field :name, size: 50, placeholder: 'John...', required: true %></dd>
      <dt><%= participant_form.label :company %></dt>
      <dd><%= participant_form.text_field :company, size: 50, placeholder: 'Company...', required: true  %></dd>
      <dt><%= participant_form.label :years_of_industry_experience %></dt>
      <dd><%= participant_form.number_field :years_of_industry_experience, required: true %></dd>
      <dt><%= participant_form.label :years_of_experience_with_rest_apis %></dt>
      <dd><%= participant_form.number_field :years_of_experience_with_rest_apis, required: true %></dd>

      <dd></dd>
    </dl>


    <%= submit_tag 'Next' %>
  </fieldset>


<% end %>